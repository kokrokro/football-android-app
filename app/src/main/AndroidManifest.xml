        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="baikal.web.footballapp.SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/SplashScreenTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="baikal.web.footballapp.protocol.ProtocolPage"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="baikal.web.footballapp.PersonalActivity"
            android:label="@string/title_activity_personal"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
