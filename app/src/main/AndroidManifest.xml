            android:screenOrientation="portrait"/>
        <activity android:name="baikal.web.footballapp.FullScreenImage"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="baikal.web.footballapp.user.activity.UserInfo"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="baikal.web.footballapp.user.activity.NewCommand"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="baikal.web.footballapp.user.activity.UserCommandInfo"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
