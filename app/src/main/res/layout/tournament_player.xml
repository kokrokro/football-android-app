<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="8dp"
    android:background="@color/colorWhite"
    >

    <ImageView
        android:id="@+id/tournamentPlayerCommandLogo"
        android:fontFamily="@font/manrope_regular"
        android:textSize="14sp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/someDescription"/>

    <TextView
        android:id="@+id/tournamentPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/TP_stats_holder"
        android:layout_toEndOf="@+id/tournamentPlayerCommandLogo"
        android:ellipsize="end"
        android:fontFamily="@font/manrope_regular"
        android:maxLines="1"
        android:textColor="@color/colorBottomNavigationUnChecked"
        android:textSize="14sp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"/>


    <LinearLayout
        android:id="@+id/TP_stats_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

    <TextView
        android:id="@+id/tournamentPlayerPoint1"
        android:fontFamily="@font/manrope_regular"
        android:gravity="end"
        android:textSize="14sp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:textColor="@color/colorBottomNavigationUnChecked"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"/>

    <TextView
        android:id="@+id/tournamentPlayerPoint2"
        android:fontFamily="@font/manrope_regular"
        android:gravity="end"
        android:textSize="14sp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:textColor="@color/colorBottomNavigationUnChecked"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"/>

    <TextView
        android:id="@+id/tournamentPlayerPoint3"
        android:fontFamily="@font/manrope_regular"
        android:gravity="end"
        android:textSize="14sp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:textColor="@color/colorBottomNavigationUnChecked"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"/>


    <TextView
        android:id="@+id/tournamentPlayerPoint4"
        android:fontFamily="@font/manrope_regular"
        android:gravity="end"
        android:textSize="14sp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:textColor="@color/colorBottomNavigationUnChecked"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"/>
    </LinearLayout>

</RelativeLayout>