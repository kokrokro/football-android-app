<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.RegistrationUserActivity"
    android:background="@color/colorWhite">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorLightGray2"
            android:layout_gravity="top"
            android:minHeight="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="18sp"
                android:gravity="center_horizontal"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/registrationSave"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_tick" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/manrope_regular"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:text="@string/registration"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/registrationClose"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_close8" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ProgressBar
        android:id="@+id/progressBarRegistration"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageButton
                android:id="@+id/registrationInfoPhoto"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/ic_add_photo"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="5dp"
                android:layout_height="1dp"
                android:background="@color/colorWhite"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:paddingStart="4sp"
                android:paddingEnd="4sp"
                android:gravity="start"
                android:textColor="@color/colorLightGrayForText"
                android:textSize="12sp"
                android:text="@string/surnameProfile"/>
            <EditText
                android:id="@+id/registrationInfoSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyEditText"
                android:hint="@string/surname"
                android:inputType="text|textCapWords"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:paddingStart="4sp"
                android:paddingEnd="4sp"
                android:gravity="start"
                android:textColor="@color/colorLightGrayForText"
                android:textSize="12sp"
                android:text="@string/nameProfile"/>
            <EditText
                android:id="@+id/registrationInfoName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyEditText"
                android:hint="@string/name"
                android:inputType="text|textCapWords"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:paddingStart="4sp"
                android:paddingEnd="4sp"
                android:gravity="start"
                android:textColor="@color/colorLightGrayForText"
                android:textSize="12sp"
                android:text="@string/patronymicProfile"/>
            <EditText
                android:id="@+id/registrationInfoPatronymic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyEditText"
                android:hint="@string/patronymic"
                android:inputType="text|textCapWords"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:paddingStart="4sp"
                android:paddingEnd="4sp"
                android:gravity="start"
                android:textColor="@color/colorLightGrayForText"
                android:textSize="12sp"
                android:text="@string/region"/>

            <Spinner
                android:id="@+id/regionEditSpinner"
                android:layout_width="match_parent"
                android:textSize="14px"
                android:layout_height="34dp"
                android:layout_marginBottom="20sp"
                android:dropDownWidth="wrap_content"
                android:popupTheme="@android:style/ThemeOverlay.Material.Light"
                android:spinnerMode="dialog"
                android:touchscreenBlocksFocus="false"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:paddingStart="4sp"
                android:paddingEnd="4sp"
                android:gravity="start"
                android:textColor="@color/colorLightGrayForText"
                android:textSize="12sp"
                android:text="@string/loginProfile"/>
            <EditText
                android:id="@+id/registrationInfoLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyEditText"
                android:hint="@string/login"
                android:inputType="text"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:paddingStart="4sp"
                android:paddingEnd="4sp"
                android:gravity="start"
                android:textColor="@color/colorLightGrayForText"
                android:textSize="12sp"
                android:text="@string/passProfile"/>
            <EditText
                android:id="@+id/registrationInfoPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyEditText"
                android:hint="@string/pass"
                android:inputType="textPassword"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:paddingStart="4sp"
                android:paddingEnd="4sp"
                android:gravity="start"
                android:textColor="@color/colorLightGrayForText"
                android:textSize="12sp"
                android:text="@string/DOBProfile"/>
            <TextView
                android:id="@+id/registrationInfoDOB"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="4sp"
                android:paddingEnd="4sp"
                android:layout_width="match_parent"
                android:gravity="center_vertical|bottom"
                android:layout_height="34dp"
                android:fontFamily="@font/manrope_regular"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="@color/colorLightGrayForText"
                android:text="@string/DOB"/>
            <View
                android:layout_width="match_parent"
                android:paddingStart="5sp"
                android:paddingEnd="5sp"
                android:layout_marginTop="4sp"
                android:layout_marginBottom="55sp"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>