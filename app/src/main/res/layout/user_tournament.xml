<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLightGray2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">
            <TextView
                android:id="@+id/userTournamentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="8sp"
                android:gravity="start"
                android:textColor="@color/colorBottomNavigationUnChecked"
                android:text="@string/tournamentTitle"/>
            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="@color/colorLightGray" />-->


            <TextView
                android:id="@+id/userTournamentDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="8sp"
                android:gravity="start"
                android:textColor="@color/colorBottomNavigationUnChecked"
                android:text="@string/tournamentDate"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/userTournamentLogo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="14dp"/>

            <TextView
                android:id="@+id/userTournamentCommandTitle"
                android:layout_width="230sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/manrope_regular"
                android:gravity="start"
                android:layout_marginStart="15sp"
                android:padding="4dp"
                android:text="@string/tournamentCommandTitle1"
                android:textColor="@color/colorBottomNavigationUnChecked" />
        </LinearLayout>
            <View
                android:id="@+id/userTournamentLine"
                android:layout_width="match_parent"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_height="1dp"
                android:background="@color/colorLightGray" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>