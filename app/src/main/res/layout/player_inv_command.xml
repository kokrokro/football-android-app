<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/playerInvLogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"/>

                <TextView
                    android:id="@+id/playerInvTitle"
                    android:layout_width="200sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/manrope_regular"
                    android:gravity="start"
                    android:layout_marginStart="15sp"
                    android:padding="4dp"
                    android:text="@string/tournamentCommandTitle1"
                    android:textColor="@color/colorBottomNavigationUnChecked" />
                <ImageButton
                    android:id="@+id/playerInvButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_plus"/>
            </LinearLayout>
            <View
                android:id="@+id/playerInvLine"
                android:layout_width="match_parent"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_height="1dp"
                android:background="@color/colorLightGray" />
        </LinearLayout>

</RelativeLayout>