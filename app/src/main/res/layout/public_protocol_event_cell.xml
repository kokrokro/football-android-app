<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/PPEC_player_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="йцукенов йцукен"
        android:textColor="@color/Black"
        android:fontFamily="@font/manrope_light"
        android:textSize="18sp"

        android:layout_alignEnd="@+id/PPEC_event_type"
        android:layout_marginEnd="50dp"

        android:padding="8dp"
        android:layout_marginTop="6dp"
        />

    <View
        android:id="@+id/PPEC_between_player_names"
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorBlue"
        android:padding="8dp"
        />

    <ImageButton
        android:id="@+id/PPEC_event_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_red_card"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/PPEC_player_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="йцукенов йцукен"
        android:textColor="@color/Black"
        android:fontFamily="@font/manrope_light"
        android:textSize="18sp"
        android:layout_alignStart="@+id/PPEC_event_type"
        android:layout_marginStart="50dp"
        android:padding="8dp"
        android:layout_marginTop="6dp"
        />

</RelativeLayout>