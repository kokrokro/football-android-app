<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/PPEC_player_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/PPEC_event_type"
        android:layout_centerVertical="true"
        android:fontFamily="@font/manrope_regular"
        android:padding="8dp"
        android:text="йцукенов йцукен"
        android:textColor="@color/Black"
        android:textSize="16sp"
        android:textAlignment="viewEnd"/>

    <View
        android:id="@+id/PPEC_between_player_names"
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorBlue"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/PPEC_event_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_event_penalty_success"
        android:background="@color/colorWhite"/>

    <TextView
        android:id="@+id/PPEC_player_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/PPEC_event_type"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/manrope_regular"
        android:padding="8dp"
        android:text="йцукенов йцукен"
        android:textColor="@color/Black"
        android:textSize="16sp"
        android:textAlignment="viewStart"/>
</RelativeLayout>