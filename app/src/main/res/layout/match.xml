<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/myMatchShowProtocol"
    android:background="@color/colorLightGray">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="20sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="14dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/myMatchDate"
                    android:textSize="14sp"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/newsSomeDate"
                    android:textColor="@color/colorLightGrayForText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/myMatchTime"
                    android:textSize="14sp"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/tournamentTime"
                    android:textColor="@color/colorLightGrayForText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/myMatchLeague"
                    android:textSize="14sp"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/tournamentTime"
                    android:textColor="@color/colorLightGrayForText" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="14dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/myMatchStadium"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:text="@string/tournamentStadium"
                    android:textColor="@color/colorLightGrayForText" />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end|center_vertical">

                <ImageView
                    android:id="@+id/myMatchCommandLogo1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="14dp"
                    android:src="@drawable/ic_logo2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end|center_vertical">

                <TextView
                    android:id="@+id/myMatchCommandTitle1"
                    android:layout_width="80sp"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_gravity="center_vertical|end"
                    android:fontFamily="@font/manrope_regular"
                    android:text="@string/commands"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/myMatchScore"
                    android:textSize="20sp"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorBottomNavigationUnChecked" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start">

                <TextView
                    android:id="@+id/myMatchCommandTitle2"
                    android:layout_marginEnd="10sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_regular"
                    android:text="@string/commands"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end|center_vertical">

                <ImageView
                    android:id="@+id/myMatchCommandLogo2"
                    android:layout_gravity="start"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/ic_logo2" />
            </LinearLayout>


        </LinearLayout>
        <TextView
            android:id="@+id/myMatchPenalty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/manrope_regular"
            android:visibility="gone"
            android:textColor="@color/colorLightGrayForText"
            android:textSize="14sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp"
            android:gravity="end">
            <Button
                android:id="@+id/myMatchEdit"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/manrope_regular"
                android:layout_width="wrap_content"
                android:textSize="13sp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="@string/protocol"/>
        </LinearLayout>

        <View
            android:id="@+id/myMatchLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="end"
            android:layout_marginBottom="5dp"
            android:background="@color/colorLightGray" />
    </LinearLayout>
</RelativeLayout>