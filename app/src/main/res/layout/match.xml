<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/myMatchShowProtocol"
    android:background="@color/colorLightGray">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="14dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/myMatchDate"
                    android:textSize="14sp"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/newsSomeDate"
                    android:textColor="@color/colorLightGrayForText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/myMatchTime"
                    android:textSize="14sp"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/tournamentTime"
                    android:textColor="@color/colorLightGrayForText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/myMatchLeague"
                    android:textSize="14sp"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAlignment="center"
                    android:text="@string/tournamentTime"
                    android:textColor="@color/colorLightGrayForText" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="14dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/myMatchStadium"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="end"
                    android:text="@string/tournamentStadium"
                    android:textColor="@color/colorLightGrayForText" />
            </LinearLayout>
        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/myMatchCommandLogo1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="14dp"
                android:src="@drawable/ic_logo2"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/myMatchCommandTitle1"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/myMatchScore"
                android:layout_toEndOf="@+id/myMatchCommandLogo1"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_regular"
                android:gravity="end"
                android:text="@string/tournamentStadium"
                android:textColor="@color/colorBottomNavigationUnChecked"
                android:textSize="15sp"
                android:paddingStart="2dp"
                android:paddingEnd="4dp"/>

            <TextView
                android:id="@+id/myMatchScore"
                android:textSize="20sp"
                android:fontFamily="@font/manrope_regular"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBottomNavigationUnChecked"
                android:textAlignment="center"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/myMatchCommandTitle2"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/myMatchCommandLogo2"
                android:layout_toEndOf="@+id/myMatchScore"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/tournamentStadium"
                android:textColor="@color/colorBottomNavigationUnChecked"
                android:textSize="15sp"
                android:paddingStart="4dp"
                android:paddingEnd="2dp"/>


            <ImageView
                android:id="@+id/myMatchCommandLogo2"
                android:layout_gravity="start"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="14dp"
                android:src="@drawable/ic_logo2"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                tools:ignore="ContentDescription" />


        </RelativeLayout>
        <TextView
            android:id="@+id/myMatchPenalty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/manrope_regular"
            android:visibility="gone"
            android:textColor="@color/colorLightGrayForText"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/matchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:ellipsize="start"
            android:fontFamily="@font/manrope_semibold"
            android:gravity="end"
            android:text="@string/matchStatus"
            android:textColor="@color/colorBottomNavigationUnChecked"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"/>

        <View
            android:id="@+id/myMatchLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="end"
            android:layout_marginBottom="5dp"
            android:background="@color/colorLightGray" />
    </LinearLayout>
</RelativeLayout>