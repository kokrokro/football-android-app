<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <TextView
        android:id="@+id/userCommandPlayerInvTextNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLightGrayForText"
        android:paddingStart="15sp"
        android:layout_marginBottom="10sp"
        android:fontFamily="@font/manrope_medium"
        android:textSize="16sp"
        android:text="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/userCommandPlayerInvLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"/>

                <TextView
                    android:id="@+id/userCommandPlayerInvName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="30dp"
                    android:paddingEnd="15sp"
                    android:fontFamily="@font/manrope_regular"
                    android:text="@string/commandPlayer"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:gravity="center_vertical|end"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/userCommandInvPlayerDelete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="14dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_close8"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/userCommandPlayerInvLine"
        android:layout_width="match_parent"
        android:layout_gravity="end"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:background="@color/colorLightGray" />

</LinearLayout>