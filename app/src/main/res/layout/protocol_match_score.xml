<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editProtocolCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/editProtocolAppbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarEditProtocol"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="top"
            android:background="@color/colorLightGray2"
            android:minHeight="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="18sp"
                android:gravity="center_horizontal"
                android:visibility="visible">

                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_tick"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/AppbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/manrope_regular"
                    android:text="@string/protocolScore"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/protocolScoreBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_arrow_back" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_regular"
            android:text="TEAM 1"
            android:textColor="@color/colorBottomNavigationUnChecked"
            android:textSize="16sp"
            android:layout_weight="1"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_regular"
            android:text="0:0"
            android:textColor="@color/colorBottomNavigationUnChecked"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_regular"
            android:text="TEAM 2"
            android:textColor="@color/colorBottomNavigationUnChecked"
            android:textSize="16sp"
            android:layout_weight="1"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_regular"
            android:text="0"
            android:textColor="@color/colorBottomNavigationUnChecked"
            android:textSize="16sp"
            android:layout_weight="4"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_regular"
            android:text="Первый тайм"
            android:textColor="@color/colorLightGrayForText"
            android:textSize="15sp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_regular"
            android:text="0"
            android:textColor="@color/colorBottomNavigationUnChecked"
            android:textSize="16sp"
            android:layout_weight="4"
            android:textAlignment="center"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorTornamentInfoGray"
        android:layout_marginTop="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/firstTeamList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/colorTornamentInfoGray"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/secondTeamList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorTornamentInfoGray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/firstTimeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 тайм"
            android:textColor="@color/colorLightGrayForText"
            android:textSize="14sp"
            android:background="@color/colorWhite"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/secondTimeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 тайм"
            android:textColor="@color/colorLightGrayForText"
            android:textSize="14sp"
            android:background="@color/colorWhite"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/extraTimeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="доп время"
            android:textColor="@color/colorLightGrayForText"
            android:textSize="14sp"
            android:background="@color/colorWhite"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/penaltyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="пенальти"
            android:textColor="@color/colorLightGrayForText"
            android:textSize="14sp"
            android:background="@color/colorWhite"
            android:layout_weight="1"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ответственные лица"
            android:textColor="@color/colorLightGrayForText"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:paddingStart="10dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/responsiblePersonsOfMatchWP"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_arrow_right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorTornamentInfoGray"
        />

    <Button
        android:id="@+id/endMatchBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Матч окончен"
        android:textColor="@color/colorLightGrayForText"
        android:textSize="14sp"
        android:background="@color/colorWhite"/>



</LinearLayout>