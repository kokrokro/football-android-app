<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/timetableLayout"
    android:layout_height="wrap_content"
    android:background="@color/colorLightGray">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorWhite">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8sp"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="14dp"
                android:layout_weight="1"
                android:gravity="center">



            <TextView
                android:id="@+id/timetableDate"
                android:textSize="14sp"
                android:fontFamily="@font/manrope_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/newsSomeDate"
                android:textColor="@color/colorLightGrayForText" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/timetableTime"
                    android:textSize="14sp"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/tournamentTime"
                    android:textColor="@color/colorLightGrayForText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/timetableTour"
                    android:textSize="14sp"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/tournamentTime"
                    android:textColor="@color/colorLightGrayForText" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="14dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/timetableStadium"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:text="@string/tournamentStadium"
                    android:textColor="@color/colorLightGrayForText" />
            </LinearLayout>
        </LinearLayout>


            <TextView
                android:id="@+id/timetableLastScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/manrope_regular"
                android:visibility="gone"
                android:textColor="@color/colorLightGrayForText"
                android:textSize="14sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/timetableCommandLogo1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_logo2"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/timetableCommandTitle1"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|end"
                android:layout_toStartOf="@+id/timetableGameScore"
                android:layout_toEndOf="@+id/timetableCommandLogo1"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_regular"
                android:gravity="end"
                android:text="@string/commands"
                android:textColor="@color/colorBottomNavigationUnChecked"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/timetableGameScore"
                android:textSize="20sp"
                android:fontFamily="@font/manrope_regular"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="24:32"
                android:gravity="center"
                android:textColor="@color/colorBottomNavigationUnChecked"
                android:layout_centerInParent="true"/>


            <TextView
                android:id="@+id/timetableCommandTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/timetableCommandLogo2"
                android:layout_toEndOf="@+id/timetableGameScore"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/commands"
                android:textColor="@color/colorBottomNavigationUnChecked"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/timetableCommandLogo2"
                android:layout_gravity="start"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_logo2"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

            <TextView
                android:id="@+id/timetablePenalty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/manrope_regular"
                android:visibility="gone"
                android:textColor="@color/colorLightGrayForText"
                android:textSize="14sp"/>


            <View
                android:id="@+id/timetableLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="end"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorLightGray" />
        </LinearLayout>
</RelativeLayout>