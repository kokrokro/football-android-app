<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/colorLightGray"
    android:paddingTop="8dp">
    <RelativeLayout
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tourneyShow"
        android:background="@color/colorWhite"
        android:paddingBottom="13sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal">
            <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/colorWhite">-->


            <LinearLayout
                android:id="@+id/linLayoutTourney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14sp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginEnd="14sp">

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/tourneyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_regular"
                    android:text="@string/tournamentTitle"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tourneyFinish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_regular"
                    android:paddingTop="3sp"
                    android:paddingBottom="3sp"
                    android:text="@string/tournamentStatusFinish"
                    android:textColor="@color/colorGray"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tourneyDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_regular"
                    android:paddingTop="5sp"
                    android:paddingBottom="3sp"
                    android:text="@string/tournamentDate"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tourneyTeamNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_regular"
                    android:paddingTop="3sp"
                    android:paddingBottom="3sp"
                    android:text="@string/tournamentCommandNum"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:textSize="12sp" />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <View
        android:id="@+id/tourneyLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="end"
        android:background="@color/colorLightGray" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFavLeagues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"/>
    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>