<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/mainview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:paddingTop="5sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="15sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/commandTrainerPhoto"
                        android:layout_marginStart="18dp"
                        android:layout_width="65dp"
                        android:layout_height="65dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginStart="15sp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/commandTrainer"
                            android:layout_width="220sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_height="wrap_content"
                            android:padding="4sp"
                            android:fontFamily="@font/manrope_regular"
                            android:textColor="@color/colorBottomNavigationUnChecked"
                            android:text="@string/you"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4sp"
                            android:fontFamily="@font/manrope_regular"
                            android:textColor="@color/colorBottomNavigationUnChecked"
                            android:text="@string/coach2"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_gravity="end"
                    android:layout_height="8sp"
                    android:layout_marginBottom="15sp"
                    android:background="@color/colorLightGray2" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:divider="@drawable/empty_tall_divider"
                    android:orientation="vertical"
                    android:showDividers="middle">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_semibold"
                        android:paddingBottom="8dp"
                        android:paddingStart="13dp"
                        android:paddingTop="8dp"
                        android:text="@string/tournamentInfoPlayers"
                        android:textColor="@color/colorBottomNavigationUnChecked"
                        android:textSize="14sp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="8sp"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="5sp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="@string/commandPlayer"
                                android:textColor="@color/colorBottomNavigationUnChecked"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp"
                            android:layout_marginEnd="8sp"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="И"
                                android:textColor="@color/colorBottomNavigationUnChecked"
                                android:textSize="14sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8sp"
                            android:layout_marginEnd="8sp"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="Г"
                                android:textColor="@color/colorBottomNavigationUnChecked"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8sp"
                            android:layout_marginEnd="8sp"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="ЖК"
                                android:textColor="@color/colorBottomNavigationUnChecked"
                                android:textSize="14sp" />
                        </LinearLayout>





                        <LinearLayout
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8sp"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="Д"
                                android:textColor="@color/colorBottomNavigationUnChecked"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLightGray" />
                </LinearLayout>


                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">


                        <!--android:paddingLeft="15dp"-->
                        <!--android:paddingRight="15dp"-->

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewCommandStructure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>

        </LinearLayout>
        <!--</android.support.v4.widget.NestedScrollView>-->
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>