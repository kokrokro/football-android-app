<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/userCommandPlayerLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"/>
                <TextView
                    android:id="@+id/userCommandPlayerName"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:paddingEnd="15sp"
                    android:fontFamily="@font/manrope_regular"
                    android:text="@string/commandPlayer"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:textSize="15sp" />
        <Button
            android:id="@+id/setRefereeButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/manrope_regular"
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            android:text="@string/setReferee"/>
    </LinearLayout>

    <View
        android:id="@+id/userCommandPlayerLine"
        android:layout_width="match_parent"
        android:layout_gravity="end"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:background="@color/colorLightGray" />

</LinearLayout>