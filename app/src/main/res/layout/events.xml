<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <TextView
        android:id="@+id/eventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center_vertical|end"
        android:fontFamily="@font/manrope_regular"
        android:text="@string/commands"
        android:visibility="gone"
        android:textColor="@color/colorLightGrayForText"
        android:textSize="12sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical">

        <ImageView
            android:id="@+id/eventCommandLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="14dp"
            android:src="@drawable/ic_logo2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start|center_vertical">

        <TextView
            android:id="@+id/eventPlayerName"
            android:layout_width="180sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/manrope_regular"
            android:text="@string/commands"
            android:textColor="@color/colorBottomNavigationUnChecked"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical">

        <TextView
            android:id="@+id/eventPlayerEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:layout_marginEnd="14dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/manrope_regular"
            android:text="@string/commands"
            android:textColor="@color/colorBottomNavigationUnChecked"
            android:textSize="14sp" />
    </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/eventLine"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_gravity="end"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorLightGray" />
</LinearLayout>