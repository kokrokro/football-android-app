<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playerInfoButtonShow2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/colorWhite">
        <ImageView
            android:id="@+id/playerInfoLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_logo2" />

        <LinearLayout
            android:id="@+id/P_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/P_switch"
            android:layout_toEndOf="@+id/playerInfoLogo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/playerInfoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_regular"
                android:paddingStart="1dp"
                android:paddingEnd="8sp"
                android:singleLine="true"
                android:text="@string/commandPlayer"
                android:textColor="@color/colorBottomNavigationUnChecked"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/playerInfoDOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:paddingTop="1dp"
                android:textColor="@color/colorLightGrayForText"
                android:textSize="14sp" />
        </LinearLayout>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/P_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:visibility="visible"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/P_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="87dp"
        android:text="team name"
        android:textColor="@color/Black"
        android:fontFamily="@font/manrope_regular"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>

    <View
        android:id="@+id/playersLine"
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_gravity="end"
        android:background="@color/colorLightGray" />
</LinearLayout>