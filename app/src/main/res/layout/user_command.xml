<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:id="@+id/tournamentaListLayout"
    >

    <!--android:padding="1sp"-->
    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_width="365dp"-->
    <!--android:layout_height="125dp"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--card_view:cardCornerRadius="4dp"-->
    <!--card_view:cardElevation="0dp"-->
    <!--android:background="@color/colorWhite">-->

    <LinearLayout
        android:id="@+id/userCommandShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userCommandTournamentTitle"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="320dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/tournamentTitle"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:layout_marginBottom="5sp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/userCommandInfoTitle"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_regular"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/tournamentCommandTitle1"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:layout_marginBottom="3sp"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/teamStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_regular"
                    android:text="@string/tournamentStatusFinish"
                    android:textColor="@color/colorGray"
                    android:paddingTop="3sp"
                    android:paddingBottom="3sp"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/userCommandTournamentDate"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tournamentDate"
                    android:layout_marginBottom="3sp"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/userCommandTournamentTransfer"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tournamentDate"
                    android:layout_marginBottom="3sp"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/userCommandInfoPlayersNum"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10sp"
                    android:text="@string/userCommandInfoPlayersNum"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:textSize="12sp" />


            </LinearLayout>


        </LinearLayout>
        <View
            android:id="@+id/userCommandLine"
            android:layout_width="match_parent"
            android:layout_gravity="end"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"
            android:background="@color/colorLightGray" />
    </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->

</RelativeLayout>