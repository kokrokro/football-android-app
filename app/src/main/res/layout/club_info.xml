<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".PersonalActivity">

    <RelativeLayout

        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/white_back"
        android:fitsSystemWindows="true"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/clubCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite">

                <LinearLayout
                    android:id="@+id/clubInfoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/clubInfoLogo"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginTop="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_con" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="14dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/clubInfoTitle"
                            android:layout_width="250sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_regular"
                            android:text="@string/title_club"
                            android:textColor="@color/colorBottomNavigationUnChecked"
                            android:textSize="20sp" />


                        <TextView
                            android:id="@+id/clubInfoCoach"
                            android:layout_width="250dp"
                            android:layout_height="25dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/manrope_regular"
                            android:textColor="@color/colorLightGrayForText"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/clubInfoDesc"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/manrope_regular"
                    android:padding="5dp"
                    android:paddingEnd="10sp"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:textSize="14sp" />

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>